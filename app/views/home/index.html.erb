<div
  class="relative overflow-hidden bg-no-repeat bg-cover"
  style="
  background-position: 30%;
    background-image: url('https://images.pexels.com/photos/1127120/pexels-photo-1127120.jpeg');
    height: 380px
  ">
  <div
    class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed"
    style="background-color: rgba(0, 0, 0, 0.75)"
  >
    <div class="flex justify-center items-center h-full">
      <div class="text-center text-white px-6 md:px-12">
        <h1 class="text-5xl md:text-6xl xl:text-7xl font-bold tracking-tight mb-12">
          Welcome to <span class="tt-green">TracTrak</span>
        </h1>
        <button
          type="button"
          class="inline-block px-7 py-3 border-2 border-white text-white font-medium text-sm leading-snug uppercase rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out"
          data-mdb-ripple="true"
          data-mdb-ripple-color="light"
        >
          Live results from track meets. Tell your coaches and meet directors you want to see results faster using TracTrak.
        </button>
      </div>
    </div>
  </div>
</div>

<%#--<div class="col-md-10 col-md-offset-1">--%>
  <%#--<div class="panel panel-default">--%>
  <%#--<div class="panel-header"><i class="fa fa-search"></i> Find a meet</div>--%>
  <%#--<div class="panel-body">--%>
  <%#--<input type="text" id="findEvent" autofocus style="width:100%" title="Find a Meet">--%>
  <%#--</div>--%>
  <%#--</div>--%>
  <%#--</div>--%>
<div class="flex justify-left">
  <div class="block p-6 bg-white w-full">
    <div class="py-3 px-6 border-b border-gray-300"><i class="far fa-clock"></i> Current meets</div>
    <div>
      <% if @current_meets.present? %>
        <ul class="bg-white rounded-lg border border-gray-200 w-full text-gray-900">
          <% @current_meets.each do |meet| %>
            <%= render partial: 'meet', locals: { meet: meet } %>
          <% end %>
        </ul>
      <% else %>
        <em>Nothing happening right now ...</em>
      <% end %>
    </div>
  </div>
</div>
<div class="flex justify-left">
  <div class="block p-6 bg-white w-full">
    <div class="py-3 px-6 border-b border-gray-300"><i class="far fa-calendar-alt"></i> Upcoming meets</div>
    <div>
      <% if @upcoming_meets.present? %>
        <ul class="bg-white rounded-lg border border-gray-200 w-full text-gray-900">
          <% @upcoming_meets.each do |meet| %>
            <%= render partial: 'meet', locals: { meet: meet } %>
          <% end %>
        </ul>
      <% else %>
        <em>Nothing planned right now ... maybe you'd like to use TracTrak at your meet?</em>
      <% end %>
    </div>
  </div>
</div>
<div class="flex justify-left">
  <div class="block p-6 bg-white w-full">
    <div class="py-3 px-6 border-b border-gray-300"><i class="far fa-calendar-check"></i> Past meets</div>
    <div>
      <% if @recent_meets.present? %>
        <ul class="bg-white rounded-lg border border-gray-200 w-full text-gray-900">
          <% @recent_meets.each do |meet| %>
            <%= render partial: 'meet', locals: { meet: meet } %>
          <% end %>
        </ul>
      <% else %>
        <em>We haven't done anything ... yet.</em>
      <% end %>
    </div>
  </div>
</div>
