<li class="px-6 py-2 border-b border-gray-200 w-full" style="font-size: x-large">
  <%= link_to meet.name, live_meet_path(meet), class: "text-green-500 hover:text-blue-800" %>
  <% if meet.stadium %>
    at <%= link_to meet.stadium.name, stadium_view_path(meet.stadium) %>
  <% end %>
  on <time><%= meet.meet_date.iso8601 %></time>
</li>
