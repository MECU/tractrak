<h3>Round <%= race.round %></h3>
<h4>
  Heat <%= race.heat %>
  <% if race.start.present? %>
    <span class="badge badge-secondary"><%= race.start %></span>
  <% end %>
  <% if race.wind.present? %>
    <span class="badge badge-info">Wind <%= race.wind %></span>
  <% end %>
</h4>
<div class="table-responsive">
  <table id="<%= "event-table-#{race.event}-#{race.round}-#{race.heat}" %>"
         class="table table-striped table-hover table-condensed">
    <thead class="thead-light">
    <tr>
      <th>Lane</th>
      <% if race.race_type.athlete_race? %>
        <th>Name</th>
      <% end %>
      <th>Team</th>
      <th>Position</th>
      <th>Time</th>
    </tr>
    </thead>
    <tbody>
    <% race.competitors.each do |lane| %>
      <%= render partial: 'lane', locals: { lane: lane } %>
    <% end %>
    </tbody>
  </table>
</div>
